<?xml version="1.0" encoding="UTF-8"?>
<web-app id="forms-application" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>Bonita Forms</display-name>
	<filter>
		<filter-name>BPMURLSupportFilter</filter-name>
		<filter-class>org.bonitasoft.forms.server.filter.BPMURLSupportFilter</filter-class>
	</filter>
	<!-- Cache Filter Start -->
	<filter>
		<filter-name>CacheFilter</filter-name>
		<filter-class>org.bonitasoft.forms.server.filter.CacheFilter</filter-class>
		<init-param>
			<param-name>js</param-name>
			<param-value>604800</param-value>
		</init-param>
		<init-param>
			<param-name>gif</param-name>
			<param-value>604800</param-value>
		</init-param>
		<init-param>
			<param-name>png</param-name>
			<param-value>604800</param-value>
		</init-param>
		<init-param>
			<param-name>jpg</param-name>
			<param-value>604800</param-value>
		</init-param>
		<init-param>
			<param-name>css</param-name>
			<param-value>604800</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>ApplicationResourceCacheFilter</filter-name>
		<filter-class>org.bonitasoft.forms.server.filter.ApplicationResourceCacheFilter</filter-class>
		<init-param>
			<param-name>js</param-name>
			<param-value>3600</param-value>
		</init-param>
		<init-param>
			<param-name>gif</param-name>
			<param-value>3600</param-value>
		</init-param>
		<init-param>
			<param-name>png</param-name>
			<param-value>3600</param-value>
		</init-param>
		<init-param>
			<param-name>jpg</param-name>
			<param-value>3600</param-value>
		</init-param>
		<init-param>
			<param-name>css</param-name>
			<param-value>3600</param-value>
		</init-param>
	</filter>
	<!-- Cache Filter End -->
	<filter>
		<filter-name>SetCharacterEncoding</filter-name>
		<filter-class>org.bonitasoft.forms.server.filter.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>BPMURLSupportFilter</filter-name>
		<url-pattern>/application/BonitaApplication.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>BPMURLSupportFilter</filter-name>
		<url-pattern>/application/homepage</url-pattern>
	</filter-mapping>
	<!-- Cache Filter Mapping Start -->
	<filter-mapping>
		<filter-name>CacheFilter</filter-name>
		<url-pattern>*.js</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CacheFilter</filter-name>
		<url-pattern>*.css</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CacheFilter</filter-name>
		<url-pattern>*.gif</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CacheFilter</filter-name>
		<url-pattern>*.png</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CacheFilter</filter-name>
		<url-pattern>*.jpg</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ApplicationResourceCacheFilter</filter-name>
		<url-pattern>/application/applicationResource</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ApplicationResourceCacheFilter</filter-name>
		<url-pattern>/console/themeResource</url-pattern>
	</filter-mapping>
	<!-- Cache Filter Mapping End -->
	<filter-mapping>
		<filter-name>SetCharacterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>org.bonitasoft.console.security.server.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>org.bonitasoft.console.security.server.CredentialsEncryptionServlet/security/credentialsencryption</servlet-name>
		<servlet-class>org.bonitasoft.console.security.server.CredentialsEncryptionServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>org.bonitasoft.forms.server.ApplicationResourceServletapplication/applicationResource</servlet-name>
		<servlet-class>org.bonitasoft.forms.server.ApplicationResourceServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>org.bonitasoft.console.servlet.AttachmentImageServletapplication/attachmentImage</servlet-name>
		<servlet-class>org.bonitasoft.console.servlet.AttachmentImageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>org.bonitasoft.console.servlet.FileUploadServletapplication/fileUpload</servlet-name>
		<servlet-class>org.bonitasoft.console.servlet.FileUploadServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>org.bonitasoft.forms.server.FormsServletapplication/formsservice</servlet-name>
		<servlet-class>org.bonitasoft.forms.server.FormsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>org.bonitasoft.forms.server.FormsServletapplication/homepage</servlet-name>
		<servlet-class>org.bonitasoft.forms.server.HomepageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>org.bonitasoft.console.security.server.LoginServletapplication/loginservice</servlet-name>
		<servlet-class>org.bonitasoft.console.security.server.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>org.bonitasoft.forms.server.login.FormLoginServletapplication/formlogin</servlet-name>
		<servlet-class>org.bonitasoft.forms.server.login.FormLoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>org.bonitasoft.console.servlet.AttachmentDownloadServletapplication/attachmentDownload</servlet-name>
		<servlet-class>org.bonitasoft.console.servlet.AttachmentDownloadServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>org.bonitasoft.forms.server.FormLayoutDownloadServletapplication/formLayoutDownload</servlet-name>
		<servlet-class>org.bonitasoft.forms.server.FormLayoutDownloadServlet</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>org.bonitasoft.console.common.themes.ThemeResourceServletconsole/themeResource</servlet-name>
		<servlet-class>org.bonitasoft.console.common.themes.ThemeResourceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/application/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>org.bonitasoft.console.security.server.CredentialsEncryptionServlet/security/credentialsencryption</servlet-name>
		<url-pattern>/security/credentialsencryption</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>org.bonitasoft.forms.server.ApplicationResourceServletapplication/applicationResource</servlet-name>
		<url-pattern>/application/applicationResource</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>org.bonitasoft.console.servlet.AttachmentImageServletapplication/attachmentImage</servlet-name>
		<url-pattern>/application/attachmentImage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>org.bonitasoft.console.servlet.FileUploadServletapplication/fileUpload</servlet-name>
		<url-pattern>/application/fileUpload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>org.bonitasoft.forms.server.FormsServletapplication/formsservice</servlet-name>
		<url-pattern>/application/formsservice</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>org.bonitasoft.console.security.server.LoginServletapplication/loginservice</servlet-name>
		<url-pattern>/application/loginservice</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>org.bonitasoft.forms.server.login.FormLoginServletapplication/formlogin</servlet-name>
		<url-pattern>/application/formlogin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>org.bonitasoft.forms.server.FormsServletapplication/homepage</servlet-name>
		<url-pattern>/application/homepage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>org.bonitasoft.console.servlet.AttachmentDownloadServletapplication/attachmentDownload</servlet-name>
		<url-pattern>/application/attachmentDownload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>org.bonitasoft.forms.server.FormLayoutDownloadServletapplication/formLayoutDownload</servlet-name>
		<url-pattern>/application/formLayoutDownload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>org.bonitasoft.console.common.themes.ThemeResourceServletconsole/themeResource</servlet-name>
		<url-pattern>/application/themeResource</url-pattern>
	</servlet-mapping>
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>